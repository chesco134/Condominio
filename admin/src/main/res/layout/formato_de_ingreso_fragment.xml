<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/lista_de_ingreso_etiqueta_lista_de_ingresos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Ingresos"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/lista_de_ingreso_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4sp"
        android:gravity="end"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/lista_de_ingreso_etiqueta_lista_de_ingresos"
        android:layout_toRightOf="@+id/lista_de_ingreso_etiqueta_lista_de_ingresos"/>

    <ListView
        android:id="@+id/lista_de_ingreso_lista_ingresos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lista_de_ingreso_etiqueta_lista_de_ingresos"/>
</RelativeLayout>