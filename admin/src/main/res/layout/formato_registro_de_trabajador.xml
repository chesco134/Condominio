<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        style="@style/MyEditText"
        android:id="@+id/formato_registro_de_trabajador_nombres"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:hint="@string/formato_registro_de_trabajador_nombres"/>
    <TextView
        style="@style/MyTextView"
        android:id="@+id/formato_registro_de_trabajador_piso_nombres"
        android:layout_below="@+id/formato_registro_de_trabajador_nombres"
        android:layout_alignStart="@+id/formato_registro_de_trabajador_nombres"
        android:layout_alignLeft="@+id/formato_registro_de_trabajador_nombres"
        android:layout_alignEnd="@+id/formato_registro_de_trabajador_nombres"
        android:layout_alignRight="@+id/formato_registro_de_trabajador_nombres"/>

    <EditText
        style="@style/MyEditText"
        android:id="@+id/formato_registro_de_trabajador_ap_paterno"
        android:layout_below="@+id/formato_registro_de_trabajador_nombres"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:hint="@string/formato_registro_de_trabajador_ap_paterno"/>
    <TextView
        style="@style/MyTextView"
        android:id="@+id/formato_registro_de_trabajador_piso_ap_paterno"
        android:layout_below="@id/formato_registro_de_trabajador_ap_paterno"
        android:layout_alignStart="@+id/formato_registro_de_trabajador_ap_paterno"
        android:layout_alignLeft="@+id/formato_registro_de_trabajador_ap_paterno"
        android:layout_alignEnd="@+id/formato_registro_de_trabajador_ap_paterno"
        android:layout_alignRight="@+id/formato_registro_de_trabajador_ap_paterno"/>

    <EditText
        style="@style/MyEditText"
        android:id="@+id/formato_registro_de_trabajador_ap_materno"
        android:layout_below="@+id/formato_registro_de_trabajador_ap_paterno"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:hint="@string/formato_registro_de_trabajador_ap_materno"/>
    <TextView
        style="@style/MyTextView"
        android:id="@+id/formato_registro_de_trabajador_piso_ap_materno"
        android:layout_below="@+id/formato_registro_de_trabajador_ap_materno"
        android:layout_alignLeft="@+id/formato_registro_de_trabajador_ap_materno"
        android:layout_alignStart="@+id/formato_registro_de_trabajador_ap_materno"
        android:layout_alignEnd="@+id/formato_registro_de_trabajador_ap_materno"
        android:layout_alignRight="@+id/formato_registro_de_trabajador_ap_materno"/>

    <EditText
        style="@style/MyEditText"
        android:id="@+id/formato_registro_de_trabajador_salario"
        android:layout_below="@+id/formato_registro_de_trabajador_ap_materno"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"
        android:hint="@string/formato_registro_de_trabajador_salario"/>
    <TextView
        style="@style/MyTextView"
        android:id="@+id/formato_registro_de_trabajador_piso_salario"
        android:layout_below="@+id/formato_registro_de_trabajador_salario"
        android:layout_alignLeft="@+id/formato_registro_de_trabajador_salario"
        android:layout_alignStart="@+id/formato_registro_de_trabajador_salario"
        android:layout_alignEnd="@+id/formato_registro_de_trabajador_salario"
        android:layout_alignRight="@+id/formato_registro_de_trabajador_salario"/>
    <CheckBox
        android:id="@+id/formato_registro_de_trabajador_posee_seguro_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formato_registro_de_trabajador_salario"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12sp"
        android:layout_marginEnd="12sp"
        android:layout_marginRight="12sp"
        android:layout_marginLeft="12sp"
        android:layout_marginStart="12sp"
        android:layout_marginBottom="16sp"
        android:text="@string/formato_registro_de_trabajador_posee_seguro_social"/>

    <RadioGroup
        android:id="@+id/formato_registro_de_trabajador_generos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formato_registro_de_trabajador_salario"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12sp"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        android:layout_marginRight="12sp"
        android:layout_marginTop="12sp"
        android:layout_marginBottom="20sp">
        <RadioButton
            android:id="@+id/formato_registro_de_trabajador_masculino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/formato_registro_de_trabajador_masculino"/>
        <RadioButton
            android:id="@+id/formato_registro_de_trabajador_femenino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/formato_registro_de_trabajador_femenino"/>
    </RadioGroup>
</RelativeLayout>