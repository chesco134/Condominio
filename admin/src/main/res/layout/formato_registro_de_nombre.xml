<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            style="@style/MyEditText"
            android:id="@+id/formato_registro_de_nombre_nombres"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:hint="@string/formato_registro_de_trabajador_nombres"/>
        <TextView
            style="@style/MyTextView"
            android:id="@+id/formato_registro_de_nombre_piso_nombres"
            android:layout_below="@+id/formato_registro_de_nombre_nombres"
            android:layout_alignStart="@+id/formato_registro_de_nombre_nombres"
            android:layout_alignLeft="@+id/formato_registro_de_nombre_nombres"
            android:layout_alignEnd="@+id/formato_registro_de_nombre_nombres"
            android:layout_alignRight="@+id/formato_registro_de_nombre_nombres"/>

        <EditText
            style="@style/MyEditText"
            android:id="@+id/formato_registro_de_nombre_ap_paterno"
            android:layout_below="@+id/formato_registro_de_nombre_nombres"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:hint="@string/formato_registro_de_trabajador_ap_paterno"/>
        <TextView
            style="@style/MyTextView"
            android:id="@+id/formato_registro_de_nombre_piso_ap_paterno"
            android:layout_below="@id/formato_registro_de_nombre_ap_paterno"
            android:layout_alignStart="@+id/formato_registro_de_nombre_ap_paterno"
            android:layout_alignLeft="@+id/formato_registro_de_nombre_ap_paterno"
            android:layout_alignEnd="@+id/formato_registro_de_nombre_ap_paterno"
            android:layout_alignRight="@+id/formato_registro_de_nombre_ap_paterno"/>

        <EditText
            style="@style/MyEditText"
            android:id="@+id/formato_registro_de_nombre_ap_materno"
            android:layout_below="@+id/formato_registro_de_nombre_ap_paterno"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:hint="@string/formato_registro_de_trabajador_ap_materno"/>
        <TextView
            style="@style/MyTextView"
            android:id="@+id/formato_registro_de_nombre_piso_ap_materno"
            android:layout_below="@+id/formato_registro_de_nombre_ap_materno"
            android:layout_alignLeft="@+id/formato_registro_de_nombre_ap_materno"
            android:layout_alignStart="@+id/formato_registro_de_nombre_ap_materno"
            android:layout_alignEnd="@+id/formato_registro_de_nombre_ap_materno"
            android:layout_alignRight="@+id/formato_registro_de_nombre_ap_materno"
            android:layout_marginBottom="12sp"/>
    </RelativeLayout>
</ScrollView>