<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shadowColor"
    tools:context="org.inspira.condominio.admin.habitantes.ResumenHabitante">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyAppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/shadowColor"
            app:titleTextAppearance="@style/collapsedAppBarTextAppearance"
            app:popupTheme="@style/MyAppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/detalles_habitante_profile_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25sp"
        android:layout_marginStart="25sp"
        android:layout_marginLeft="20sp"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/detalles_habitante_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detalles_habitante_posee_seguro"
        android:layout_marginTop="12sp"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginEnd="12sp"
        android:layout_marginRight="12sp"
        android:layout_marginBottom="20sp"
        android:textSize="26sp"/>

    <RelativeLayout
        android:id="@+id/detalles_habitante_contenedor_torre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="12sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="12sp">
        <TextView
            android:id="@+id/detalles_habitante_etiqueta_torre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detalles_habitante_etiqueta_torre"/>
        <TextView
            android:id="@+id/detalles_habitante_torre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/detalles_habitante_etiqueta_torre"
            android:layout_toRightOf="@id/detalles_habitante_etiqueta_torre"
            android:layout_marginStart="4sp"
            android:layout_marginLeft="4sp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/detalles_habitante_contenedor_departamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detalles_habitante_contenedor_torre"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="12sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="12sp">
        <TextView
            android:id="@+id/detalles_habitante_etiqueta_nombre_departamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detalles_habitante_etiqueta_nombre_departamento"/>
        <TextView
            android:id="@+id/detalles_habitante_nombre_departamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/detalles_habitante_etiqueta_nombre_departamento"
            android:layout_toRightOf="@id/detalles_habitante_etiqueta_nombre_departamento"
            android:layout_marginStart="4sp"
            android:layout_marginLeft="4sp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <CheckBox
        android:id="@+id/detalles_habitante_es_propietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detalles_habitante_contenedor_departamento"
        android:layout_alignEnd="@+id/detalles_habitante_contenedor_departamento"
        android:layout_alignRight="@+id/detalles_habitante_contenedor_departamento"
        android:layout_marginTop="10sp"
        android:text="@string/detalles_habitante_es_propietario"/>
    <CheckBox
        android:id="@+id/detalles_habitante_posee_seguro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detalles_habitante_es_propietario"
        android:layout_alignEnd="@+id/detalles_habitante_contenedor_departamento"
        android:layout_alignRight="@+id/detalles_habitante_contenedor_departamento"
        android:layout_marginTop="5sp"
        android:text="@string/detalles_habitante_es_propietario"
        android:textSize="10sp"/>

</RelativeLayout>