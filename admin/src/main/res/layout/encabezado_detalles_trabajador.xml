<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/shadowColor"
    tools:context="org.inspira.condominio.admin.trabajadores.DetallesTrabajador">

    <ImageView
        android:id="@+id/detalles_trabajador_profile_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40sp"
        android:layout_marginStart="40sp"
        android:layout_marginLeft="40sp"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/detalles_trabajador_back_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="6sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12sp"
        android:layout_marginStart="12sp"
        android:layout_marginLeft="12sp"
        android:clickable="true"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/detalles_trabajador_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detalles_trabajador_profile_picture"
        android:layout_marginTop="12sp"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginEnd="12sp"
        android:layout_marginRight="12sp"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/detalles_trabajador_trick"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:layout_below="@+id/detalles_trabajador_nombre"/>

    <RelativeLayout
        android:id="@+id/detalles_trabajador_contenedor_tipo_trabajador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/detalles_trabajador_back_arrow"
        android:layout_toEndOf="@+id/detalles_trabajador_profile_picture"
        android:layout_toRightOf="@+id/detalles_trabajador_profile_picture"
        android:layout_marginLeft="12sp"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        android:layout_marginRight="12sp"
        android:layout_marginTop="13sp"
        android:gravity="end">
        <TextView
            android:id="@+id/detalles_trabajador_etiqueta_tipo_trabajador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detalles_trabajador_etiqueta_tipo_trabajador"/>
        <TextView
            android:id="@+id/detalles_trabajador_tipo_trabajador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/detalles_trabajador_etiqueta_tipo_trabajador"
            android:layout_toRightOf="@id/detalles_trabajador_etiqueta_tipo_trabajador"
            android:layout_marginStart="4sp"
            android:layout_marginLeft="4sp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <CheckBox
        android:id="@+id/detalles_trabajador_posee_seguro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detalles_trabajador_contenedor_tipo_trabajador"
        android:layout_alignEnd="@+id/detalles_trabajador_contenedor_tipo_trabajador"
        android:layout_alignRight="@+id/detalles_trabajador_contenedor_tipo_trabajador"
        android:layout_marginTop="10sp"
        android:text="@string/detalles_trabajador_posee_seguro"/>

</RelativeLayout>