<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.inspira.condominio.admin.habitante.ResumenHabitante"
    tools:showIn="@layout/activity_scrolling_detalles_habitante">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detalles_habitante_etiqueta_contacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12sp"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="12sp"
            android:text="@string/detalles_habitante_etiqueta_contacto"/>
        <LinearLayout
            android:id="@+id/detalles_habitante_contenedor_de_contacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/detalles_habitante_etiqueta_contacto"
            android:layout_marginTop="12sp"
            android:layout_alignStart="@+id/detalles_habitante_etiqueta_contacto"
            android:layout_alignLeft="@+id/detalles_habitante_etiqueta_contacto"/>
        <TextView
            android:id="@+id/detalles_habitante_etiqueta_observaciones_habitante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detalles_habitante_contenedor_de_contacto"
            android:layout_alignStart="@+id/detalles_habitante_etiqueta_contacto"
            android:layout_alignLeft="@+id/detalles_habitante_etiqueta_contacto"
            android:layout_marginTop="20sp"
            android:text="@string/detalles_habitante_etiqueta_observaciones"/>
        <LinearLayout
            android:id="@+id/detalles_habitante_contenedor_observaciones_habitante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detalles_habitante_etiqueta_observaciones_habitante"
            android:layout_alignStart="@+id/detalles_habitante_etiqueta_contacto"
            android:layout_alignLeft="@+id/detalles_habitante_etiqueta_contacto"
            android:layout_marginTop="12sp"
            android:layout_marginBottom="20sp"
            android:orientation="vertical"/>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>