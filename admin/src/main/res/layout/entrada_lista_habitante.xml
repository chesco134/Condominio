<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dp">

    <ImageView
        android:id="@+id/entrada_lista_habitante_perfil"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="6sp"
        android:layout_marginStart="6sp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/user_coin_blk"
        android:background="@drawable/my_custom_image_button"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:scaleType="centerCrop"
        android:clickable="true"/>

    <TextView
        android:id="@+id/entrada_lista_habitante_departamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="12sp"
        android:layout_marginRight="12sp"/>

    <TextView
        android:id="@+id/entrada_lista_habitante_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/entrada_lista_habitante_perfil"
        android:layout_toRightOf="@+id/entrada_lista_habitante_perfil"
        android:layout_toStartOf="@+id/entrada_lista_habitante_departamento"
        android:layout_toLeftOf="@+id/entrada_lista_habitante_departamento"
        android:layout_marginLeft="6sp"
        android:layout_marginStart="6sp"
        android:layout_marginEnd="6sp"
        android:layout_marginRight="6sp"
        android:layout_marginTop="20sp"
        android:textStyle="bold"/>

</RelativeLayout>