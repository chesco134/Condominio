<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dp">

    <ImageView
        android:id="@+id/entrada_lista_habitante_perfil"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12sp"
        android:layout_marginLeft="12sp"
        android:layout_marginStart="12sp"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/entrada_lista_habitante_departamento"
        android:layout_width="90sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18sp"
        android:layout_marginEnd="12sp"
        android:layout_marginRight="12sp"/>

    <TextView
        android:id="@+id/entrada_lista_habitante_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/entrada_lista_habitante_perfil"
        android:layout_toRightOf="@+id/entrada_lista_habitante_perfil"
        android:layout_toStartOf="@+id/entrada_lista_habitante_departamento"
        android:layout_toLeftOf="@+id/entrada_lista_habitante_departamento"
        android:layout_marginStart="4sp"
        android:layout_marginLeft="4sp"
        android:layout_marginEnd="4sp"
        android:layout_marginRight="4sp"
        android:layout_marginTop="18sp"/>

</RelativeLayout>