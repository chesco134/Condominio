<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/elemento_de_lista_de_convocatoria_asunto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/elemento_de_lista_de_convocatoria_boton"
        android:layout_toLeftOf="@+id/elemento_de_lista_de_convocatoria_boton"
        android:layout_marginTop="12sp"
        android:layout_marginLeft="12sp"
        android:layout_marginStart="12sp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/elemento_de_lista_de_convocatoria_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/elemento_de_lista_de_convocatoria_asunto"
        android:layout_marginTop="8sp"
        android:layout_marginStart="12sp"
        android:layout_marginLeft="12sp"/>

    <Button
        android:id="@+id/elemento_de_lista_de_convocatoria_boton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="12sp"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:layout_marginEnd="12sp"
        android:background="@drawable/ic_info_outline_black_24dp"/>

</RelativeLayout>