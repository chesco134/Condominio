<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_margin="20sp">

        <EditText
            android:id="@+id/signup_email"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="@string/startup_email"
            android:background="@color/white"
            android:textSize="20sp"
            android:inputType="textEmailAddress"/>
        <TextView
            android:id="@+id/signup_piso_email"
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:layout_below="@+id/signup_email"
            android:layout_alignEnd="@+id/signup_email"
            android:layout_alignRight="@+id/signup_email"
            android:layout_alignStart="@+id/signup_email"
            android:layout_alignLeft="@+id/signup_email"
            android:background="@drawable/piso_1"/>

        <EditText
            android:id="@+id/signup_pass"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="@string/startup_pass"
            android:background="@color/white"
            android:layout_below="@+id/signup_email"
            android:layout_marginTop="20sp"
            android:inputType="textPassword"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/signup_piso_pass"
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:layout_below="@+id/signup_pass"
            android:layout_alignEnd="@+id/signup_pass"
            android:layout_alignRight="@+id/signup_pass"
            android:layout_alignStart="@+id/signup_pass"
            android:layout_alignLeft="@+id/signup_pass"
            android:background="@drawable/piso_1"/>

        <EditText
            android:id="@+id/signup_usuario"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="@string/signup_usuario"
            android:layout_below="@+id/signup_pass"
            android:layout_marginTop="20sp"
            android:background="@color/white"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/signup_piso_usuario"
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:layout_below="@+id/signup_usuario"
            android:layout_alignEnd="@+id/signup_usuario"
            android:layout_alignRight="@+id/signup_usuario"
            android:layout_alignStart="@+id/signup_usuario"
            android:layout_alignLeft="@+id/signup_usuario"
            android:background="@drawable/piso_1"/>

        <TextView
            android:id="@+id/signup_fecha_de_nacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/signup_date_of_birth"
            android:layout_below="@+id/signup_usuario"
            android:textSize="20sp"
            android:layout_marginTop="20sp"
            android:paddingTop="8sp"
            android:paddingBottom="4sp"/>
        <TextView
            android:id="@+id/signup_piso_fecha_de_nacimiento"
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:layout_below="@+id/signup_fecha_de_nacimiento"
            android:layout_alignEnd="@+id/signup_fecha_de_nacimiento"
            android:layout_alignRight="@+id/signup_fecha_de_nacimiento"
            android:layout_alignStart="@+id/signup_fecha_de_nacimiento"
            android:layout_alignLeft="@+id/signup_fecha_de_nacimiento"
            android:background="@drawable/piso_1"/>

        <Button
            android:id="@+id/signup_registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_registrar"
            android:layout_below="@+id/signup_piso_fecha_de_nacimiento"
            android:layout_marginTop="12sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/signup_pass_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_piso_fecha_de_nacimiento"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@+id/signup_registrar"
            android:layout_toLeftOf="@+id/signup_registrar"
            android:layout_marginTop="12sp"
            android:text="@string/signup_pista_password"/>

    </RelativeLayout>
</ScrollView>